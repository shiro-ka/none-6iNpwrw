<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html>
<html b:css='false' b:js='false' b:responsive='true' b:version='3' xmlns='http://www.w3.org/1999/xhtml' xmlns:b='http://www.google.com/2005/gml/b' xmlns:data='http://www.google.com/2005/gml/data' xmlns:expr='http://www.google.com/2005/gml/expr'>
<head>
  <meta charset='utf-8'/>
  <meta content='width=device-width, initial-scale=1' name='viewport'/>
  <title>
    <b:if cond='data:blog.pageType == &quot;item&quot;'>
      <data:blog.pageName/> - 
    </b:if>
    <data:blog.pageTitle/>
  </title>
  <!-- OGP -->
  <b:if cond='data:blog.pageType == &quot;item&quot;'>
    <meta expr:content='data:blog.pageName' property='og:title'/>
    <meta content='article' property='og:type'/>
    <meta expr:content='data:blog.canonicalUrl' property='og:url'/>
    <meta expr:content='data:blog.postImageUrl' property='og:image'/>
    <meta expr:content='data:blog.metaDescription' property='og:description'/>
    <meta content='data:blog.title' property='og:site_name'/>
  <b:else/>
    <meta expr:content='data:blog.pageName' property='og:title'/>
    <meta content='article' property='og:type'/>
    <meta expr:content='data:blog.canonicalUrl' property='og:url'/>
    <!--<meta property='og:url' content=''/>-->
    <meta expr:content='data:blog.metaDescription' property='og:description'/>
  </b:if>
  <!-- デフォルトcssを削除 -->
  &lt;style&gt;&lt;!--/*<b:skin><![CDATA[*/]]></b:skin>
  <!-- bulma v1.0.0 | MIT License | https://github.com/jgthms/bulma -->
  <link href='https://cdn.jsdelivr.net/npm/bulma@1.0.0/css/bulma.min.css' rel='stylesheet'/>
  <link href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css' rel='stylesheet'/>
  <!-- M PLUS Rounded 1c | 自家製フォント工房 (http://jikasei.me/font/rounded-mplus/about.html) -->
  <link href='https://fonts.googleapis.com' rel='preconnect'/>
  <link href='https://fonts.gstatic.com' rel='preconnect'/>
  <link href='https://fonts.googleapis.com/css2?family=M+PLUS+Rounded+1c:wght@300&amp;display=swap' rel='stylesheet'/>
  <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
  <style>
    /* -- / / / / / / / / / / -- */
      /* webフォント */
      body {
        font-family: &quot;M PLUS Rounded 1c&quot;,sans-serif;
        font-weight: 300;
        font-style: normal;
      }
    /* -- / / / / / / / / / / -- */
      /* テーマの色 */
      :root {
        /* ダークモード(デフォルト) */
        --none-hero-bg-dark: #14161A;
        --none-main-bg-dark: #171a23;
        --none-foot-bg-dark: #1F2229;
        /* ライトモード */
        --none-hero-bg-light: #F9FAFB;
        --none-main-bg-light: #F3F4F6;
        --none-foot-bg-light: #ABB1BF;
      }
    /* -- / / / / / / / / / / -- */
      /* スムーススクロール */
      html {
        scroll-behavior: smooth;
      }
      /* 本文の太字 */
      .content b {
        font-weight: 600 !important;
      }
      /* 右サイドバーの固定コンテナ */
      .sticky-container {
        position: sticky;
        top: 3rem;
      }
    /* -- / / / / / / / / / / -- */
    /* 設定したテーマの色をセット */
    body {background: var(--none-main-bg);}
    header {background: var(--none-hero-bg);}
    footer {background: var(--none-foot-bg);}
    :root{--none-hero-bg:var(--none-hero-bg-dark);--none-main-bg:var(--none-main-bg-dark);--none-foot-bg:var(--none-foot-bg-dark);}
    @media(prefers-color-scheme: light){--none-hero-bg:var(--none-hero-bg-light);--none-main-bg:var(--none-main-bg-light);--none-foot-bg: var(--none-foot-bg-light);}
    [data-theme=light]{--none-hero-bg:var(--none-hero-bg-light);--none-main-bg:var(--none-main-bg-light);--none-foot-bg:var(--none-foot-bg-light);}
    [data-theme=dark]{--none-hero-bg:var(--none-hero-bg-dark);--none-main-bg:var(--none-main-bg-dark);--none-foot-bg:var(--none-foot-bg-dark);}
    header {margin-bottom: .75em !important;}
    /* 記事リストのテキストの色(デフォルトはリンクテキストの色) */
    .index-item * {color: var(--bulma-body-color);}
    .index-item-title {border-bottom: solid 1px;}
    .index-item-thumbnail {object-fit: cover;}
    /* ウィジェットのpadding(bloggerウィジェットのsection対策) */
    .widget-section {padding: 0 !important;}
  </style>
<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
&lt;/head&gt;&lt;!--</head>--&gt;
<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
<body>
  <!-- = = = = = = = = = = ヘッダー = = = = = = = = = = -->
  <header class='hero'>
    <!-- ヘッダー上部 -->
    <div class='hero-head'>
      <nav class='navbar'>
        <div class='navbar-brand'>
          <a class='navbar-item' expr:href='data:blog.homepageUrl'>
            <span class='icon mx-1'><i class='fas fa-home'/></span>
            <p>Home</p>
          </a>
          <a aria-expanded='false' aria-label='menu' class='navbar-burger js-burger' role='button'>
            <span aria-hidden='true'/>
            <span aria-hidden='true'/>
            <span aria-hidden='true'/>
          </a>
        </div>
        <div class='navbar-menu js-menu'>
          <div class='navbar-start'>
            <a class='navbar-item' href='https://github.com/jgthms/bulma' target='_blank'>
              <p>Bulma</p>
              <span class='icon mx-1'><i class='fas fa-external-link-alt has-text-grey-dark'/></span>
            </a>
            <a class='navbar-item' href='http://jikasei.me/font/rounded-mplus/about.html' target='_blank'>
              <p>M PLUS Rounded</p>
              <span class='icon mx-1'><i class='fas fa-external-link-alt has-text-grey-dark'/></span>
            </a>
            <a class='navbar-item' href='https://jquery.com' target='_blank'>
              <p>jQuery</p>
              <span class='icon mx-1'><i class='fas fa-external-link-alt has-text-grey-dark'/></span>
            </a>
          </div>
          <div class='navbar-end buttons'>
            <button class='button is-ghost theme-switch'>
              <span class='icon'><i class='fas'/></span>
            </button>
            <a class='button' href='https://github.com/shiro-ka/none-6iNpwrw'>
              <span class='icon'><i class='fab fa-github'/></span>
              <span>GitHub</span>
            </a>
          </div>
        </div>
      </nav>
    </div>
    <!-- ヘッダー本体 -->
    <div class='hero-body'>
      <p class='title'><data:blog.title/></p>
    </div>
    <!-- ヘッダー下部 -->
    <div class='hero-foot'>
      <p class='has-text-right'>blog.pageType : <data:blog.pageType/></p>
    </div>
  </header>
  <!-- = = = = = = = = = = メイン = = = = = = = = = = = -->
  <main class='container is-widescreen'>
    <div class='columns'>
      <!-- 左サイドカラム -  -  -  -  -  -  -->
      <div class='column is-1 is-hidden-touch left-sidebar'/>
      <!-- メインカラム -  -  -  -  -  -  -  -->
      <div class='column'>
        <!-- ブログウィジェット -->
        <b:section id='ブログウィジェット'>
          <b:widget id='Blog0' locked='false' title='ブログの投稿' type='Blog' version='1'>
            <b:widget-settings>
              <b:widget-setting name='showDateHeader'>false</b:widget-setting>
              <b:widget-setting name='style.textcolor'>#ffffff</b:widget-setting>
              <b:widget-setting name='showShareButtons'>false</b:widget-setting>
              <b:widget-setting name='showCommentLink'>false</b:widget-setting>
              <b:widget-setting name='style.urlcolor'>#ffffff</b:widget-setting>
              <b:widget-setting name='showAuthor'>true</b:widget-setting>
              <b:widget-setting name='style.linkcolor'>#ffffff</b:widget-setting>
              <b:widget-setting name='style.unittype'>TextAndImage</b:widget-setting>
              <b:widget-setting name='style.bgcolor'>#ffffff</b:widget-setting>
              <b:widget-setting name='reactionsLabel'/>
              <b:widget-setting name='showAuthorProfile'>false</b:widget-setting>
              <b:widget-setting name='style.layout'>1x1</b:widget-setting>
              <b:widget-setting name='showLabels'>true</b:widget-setting>
              <b:widget-setting name='showLocation'>false</b:widget-setting>
              <b:widget-setting name='showTimestamp'>true</b:widget-setting>
              <b:widget-setting name='postsPerAd'>1</b:widget-setting>
              <b:widget-setting name='showBacklinks'>false</b:widget-setting>
              <b:widget-setting name='style.bordercolor'>#ffffff</b:widget-setting>
              <b:widget-setting name='showInlineAds'>false</b:widget-setting>
              <b:widget-setting name='showReactions'>false</b:widget-setting>
            </b:widget-settings>
            <b:includable id='main'>
              <!-- index(記事リスト) -->
              <b:if cond='data:blog.pageType == &quot;index&quot;'>
                <div class='fixed-grid post-index'>
                  <div class='grid'>
                    <b:loop values='data:posts' var='post'>
                      <div class='cell index-item'>
                        <div class='card'>
                          <a expr:href='data:post.url'>
                            <b:if cond='data:post.firstImageUrl'>
                              <div class='card-image image is-4by3'>
                                <img class='index-item-thumbnail' expr:src='data:post.firstImageUrl'/>
                              </div>
                            </b:if>
                          </a>
                          <div class='card-content'>
                            <a expr:href='data:post.url'>
                              <p class='index-item-date'>
                                <data:post.date/>
                              </p>
                              <p class='is-size-5 index-item-title'>
                                <data:post.title/>
                              </p>
                              <p class='is-size-7 index-item-snippet'>
                                <data:post.snippet/>
                              </p>
                            </a>
                            <b:if cond='data:post.labels'>
                              <div class='buttons index-item-labels mt-4'>
                                <b:loop values='data:post.labels' var='label'>
                                  <a class='button' expr:href='data:label.url'><data:label.name/></a>
                                </b:loop>
                              </div>
                            </b:if>
                          </div>
                        </div>
                      </div>
                    </b:loop>
                  </div>
                </div>
                <nav aria-label='pagination' class='pagination is-centered' role='navigation'>
                  <b:if cond='data:olderPageUrl'>
                    <a class='pagination-previous' expr:href='data:olderPageUrl'>Prev</a>
                  <b:else/>
                    <a class='pagination-previous is-disabled'>Prev</a>
                  </b:if>
                  <b:if cond='data:newerPageUrl'>
                    <a class='pagination-next' expr:href='data:newerPageUrl'>Next</a>
                  <b:else/>
                    <a class='pagination-next is-disabled'>Next</a>
                  </b:if>
                </nav>
              </b:if>
              <!-- item(個別記事) -->
              <b:if cond='data:blog.pageType == &quot;item&quot;'>
                <b:loop values='data:posts' var='post'>
                  <div class='content post-item'>
                    <!-- 日時 -->
                    <p class='post-date'>
                      <data:post.date/>
                    </p>
                    <!-- タイトル -->
                    <h1 class='post-title'>
                      <data:post.title/>
                    </h1>
                    <!-- ラベル -->
                    <b:if cond='data:post.labels'>
                      <div class='buttons is-right post-labels'>
                        <b:loop values='data:post.labels' var='label'>
                          <a class='button' expr:href='data:label.url'><data:label.name/></a>
                        </b:loop>
                      </div>
                    </b:if>
                    <!-- 本文 -->
                    <div class='post-body'>
                      <data:post.body/>
                    </div>
                  </div>
                </b:loop>
              </b:if>
            </b:includable>
            <b:includable id='backlinkDeleteIcon'/>
            <b:includable id='backlinks'/>
            <b:includable id='comment-form'/>
            <b:includable id='commentDeleteIcon'/>
            <b:includable id='comment_count_picker'/>
            <b:includable id='comment_picker'/>
            <b:includable id='comments'/>
            <b:includable id='feedLinks'/>
            <b:includable id='feedLinksBody'/>
            <b:includable id='iframe_comments'/>
            <b:includable id='mobile-index-post'/>
            <b:includable id='mobile-main'/>
            <b:includable id='mobile-nextprev'/>
            <b:includable id='mobile-post'/>
            <b:includable id='nextprev'/>
            <b:includable id='post'/>
            <b:includable id='postQuickEdit'/>
            <b:includable id='shareButtons'/>
            <b:includable id='status-message'/>
            <b:includable id='threaded-comment-form'/>
            <b:includable id='threaded_comment_js'/>
            <b:includable id='threaded_comments'/>
          </b:widget>
        </b:section>
      </div>
      <!-- 右サイドカラム -  -  -  -  -  -  -->
      <div class='column is-3 mt-6 is-hidden-touch right-sidebar'>
        <div class='sticky-container'>
          <!-- ラベルウィジェット(indexのみ) -->
          <b:if cond='data:blog.pageType == &quot;index&quot;'>
            <div class='box'>
              <b:section class='widget-section' id='ラベルウィジェット'>
                <b:widget id='Label0' locked='false' title='ラベル' type='Label' version='1'>
                  <b:widget-settings>
                    <b:widget-setting name='sorting'>FREQUENCY</b:widget-setting>
                    <b:widget-setting name='display'>CLOUD</b:widget-setting>
                    <b:widget-setting name='selectedLabelsList'/>
                    <b:widget-setting name='showType'>ALL</b:widget-setting>
                    <b:widget-setting name='showFreqNumbers'>false</b:widget-setting>
                  </b:widget-settings>
                  <b:includable id='main'>
                    <div class='buttons'>
                      <b:loop values='data:labels' var='label'>
                        <a class='button is-small' expr:href='data:label.url'><data:label.name/></a>
                      </b:loop>
                    </div>
                  </b:includable>
                </b:widget>
              </b:section>
            </div>
          </b:if>
          <!-- 目次(itemのみ) -->
          <b:if cond='data:blog.pageType == &quot;item&quot;'>
            <aside class='box menu side-toc'>
              <p class='menu-label'>目次</p>
            </aside>
          </b:if>
        </div>
      </div>
    </div>
  </main>
  <!-- = = = = = = = = = = フッター = = = = = = = = = = -->
  <footer class='footer'>
    <!-- Bulmaライセンス -->
    <div class='content has-text-centered'>
      <p>
        <strong>Bulma</strong> by <a href='https://jgthms.com'>Jeremy Thomas</a>.
        The source code is licensed <a href='https://opensource.org/license/mit'>MIT</a>.
      </p>
    </div>
  </footer>
  <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
  <!-- jQuery | MIT License | https://jquery.com/license -->
  <script src='https://code.jquery.com/jquery-3.4.1.min.js'/>
  <script>
    // ハンバーガーメニュー
    $(document).ready(function () {
      $(&quot;.js-burger&quot;).click(function () {
        $(this).toggleClass(&quot;is-active&quot;);
        $(&quot;.js-menu&quot;).toggleClass(&quot;is-active&quot;);
      });
    });
    // テーマ切り替え
    $(function () {
      const $icon = $(&#39;.theme-switch i&#39;);
      let currentTheme = localStorage.getItem(&#39;theme&#39;);
      if (!currentTheme) {
        currentTheme = window.matchMedia(&#39;(prefers-color-scheme: light)&#39;).matches ? &#39;light&#39; : &#39;dark&#39;;
      }
      function applyTheme(theme) {
        $(&#39;html&#39;).attr(&#39;data-theme&#39;, theme);
        localStorage.setItem(&#39;theme&#39;, theme);
        $icon.removeClass(&#39;fa-sun fa-moon&#39;).addClass(theme === &#39;light&#39; ? &#39;fa-sun&#39; : &#39;fa-moon&#39;);
      }
      applyTheme(currentTheme);
      $(&#39;.theme-switch&#39;).on(&#39;click&#39;, function () {
        currentTheme = currentTheme === &#39;dark&#39; ? &#39;light&#39; : &#39;dark&#39;;
        applyTheme(currentTheme);
      });
    });
    // はてなブログカード生成
    $(document).ready(function () {
      $(&#39;.post-body a[href]&#39;).each(function () {
        const $a = $(this);
        const href = $a.attr(&#39;href&#39;);
        if (!href.startsWith(&#39;http&#39;)) return;
        const $p = $a.closest(&#39;p&#39;);
        const $iframe = $(&#39;&lt;iframe&gt;&#39;, {
          class: &#39;hatenablogcard&#39;,
          style: &#39;display:block;width:100%;height:auto;margin:12px 0;max-width:680px;&#39;,
          title: href,
          src: &#39;https://hatenablog-parts.com/embed?url=&#39; + encodeURIComponent(href),
          frameborder: 0,
          scrolling: &#39;no&#39;
        });
        $p.after($iframe);
      });
    });
    // 目次作成
    $(function () {
      var $content = $(&#39;.post-body&#39;);
      var $headings = $content.find(&#39;h2, h3, h4&#39;);
      var $tocList = $(&#39;&lt;ul class=&quot;menu-list&quot;&gt;&lt;/ul&gt;&#39;);
      var stack = [];
      $headings.each(function (index) {
        var $el = $(this);
        var tag = this.tagName.toLowerCase();
        var text = $el.text().trim();
        var id = &#39;toc-&#39; + index;
        if (!$el.attr(&#39;id&#39;)) {
          $el.attr(&#39;id&#39;, id);
        }
        var level = parseInt(tag.slice(1)); // h2 -&gt; 2, h3 -&gt; 3...
        var $li = $(&#39;&lt;li&gt;&lt;/li&gt;&#39;);
        var $a = $(&#39;&lt;a&gt;&lt;/a&gt;&#39;).attr(&#39;href&#39;, &#39;#&#39; + id).text(text);
        $li.append($a);
        while (stack.length &amp;&amp; stack[stack.length - 1].level &gt;= level) {
          stack.pop();
        }
        if (stack.length === 0) {
          $tocList.append($li);
          stack.push({ level: level, $ul: $tocList, $li: $li });
        } else {
          var parentLi = stack[stack.length - 1].$li;
          var $subUl = parentLi.children(&#39;ul&#39;);
          if ($subUl.length === 0) {
            $subUl = $(&#39;&lt;ul&gt;&lt;/ul&gt;&#39;);
            parentLi.append($subUl);
          }
          $subUl.append($li);
          stack.push({ level: level, $ul: $subUl, $li: $li });
        }
      });
      $(&#39;.side-toc&#39;).append($tocList);
    });
    // 目次スクロールハイライト
    $(function () {
      var $tocLinks = $(&#39;.side-toc a&#39;);
      var headingSelector = &#39;h2, h3, h4&#39;;
      $(window).on(&#39;scroll&#39;, function () {
        var currentScroll = $(window).scrollTop();
        var currentId = null;
        $(headingSelector).each(function () {
          var offsetTop = $(this).offset().top;
          if (currentScroll &gt;= offsetTop - 250) {
            currentId = $(this).attr(&#39;id&#39;);
          }
        });
        $tocLinks.removeClass(&#39;is-active&#39;);
        if (currentId) {
          $tocLinks.filter(&#39;[href=&quot;#&#39; + currentId + &#39;&quot;]&#39;).addClass(&#39;is-active&#39;);
        }
      });
    });
  </script>
  <!-- &lt;!- -<b:section id='のねしんぷる'/>- -&gt; - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
</body>
</html>